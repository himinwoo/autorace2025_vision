<?xml version="1.0"?>
<launch>
  <!-- Color Detector Node (통합: 빨강 + 파랑) -->
  <node name="color_detector" pkg="color_detector" type="color_detector_node" output="screen">
    <!-- 픽셀 개수 임계값 -->
    <param name="red_threshold" value="45000"/>
    <param name="blue_threshold" value="45000"/>
    <param name="debug_mode" value="false"/>
    
  <!-- 빨간색 HSV 범위 (빨강은 HSV에서 0-10과 170-180에 걸쳐 있음) -->
    <rosparam param="red_hsv_lower1">[0, 70, 45]</rosparam>
    <rosparam param="red_hsv_upper1">[15, 145, 75]</rosparam>
    <rosparam param="red_hsv_lower2">[175, 70, 45]</rosparam>
    <rosparam param="red_hsv_upper2">[180, 145, 75]</rosparam>
    <!-- 파란색 HSV 범위 -->
    <rosparam param="blue_hsv_lower">[90, 40, 50]</rosparam>
    <rosparam param="blue_hsv_upper">[115, 145, 80]</rosparam>
  </node>
</launch>