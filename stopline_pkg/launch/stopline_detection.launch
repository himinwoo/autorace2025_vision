<launch>
  <!-- Stopline Detection Node -->
  <node name="stopline_detection_node" pkg="stopline_pkg" type="stopline_detection_node.py" output="screen">
    <!-- 이미지 크롭 파라미터 -->
    <param name="crop_top" value="280" />
    
    <!-- 정지선 감지 파라미터 -->
    <param name="down_hist_start_line" value="0" />
    <param name="stopline_threshold" value="10" />
    <param name="count_threshold" value="5" />
    <rosparam param="cooldown_durations">[3.0, 7.0, 3.0]</rosparam> <!-- mission_state별 쿨다운 시간 (초) -->
    <param name="show_debug_image" value="true" />
    
    <!-- 히스토그램 임계값 파라미터 -->
    <param name="histogram_threshold" value="200" />
    
    <!-- Otsu 임계값 조정 파라미터 -->
    <param name="otsu_threshold_offset" value="40" />
    
    <!-- 허프 변환 파라미터 (대각선 정지선 감지용) -->
    <param name="use_hough" value="false" />
    <param name="hough_threshold" value="150" />
    <param name="hough_min_line_length" value="150" />
    <param name="hough_max_line_gap" value="10" />
    <param name="hough_angle_threshold" value="25" />
    <param name="hough_width_ratio" value="0.3" />
    
    <!-- 노란색 정지선 감지 파라미터 (state 9용) -->
    <rosparam param="yellow_hsv_lower">[0, 40, 50]</rosparam>
    <rosparam param="yellow_hsv_upper">[26, 110, 255]</rosparam>
    <param name="yellow_state" value="9" />
  </node>
</launch>
